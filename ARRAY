#include <iostream>
using namespace std;
int main() 
{
  int n[] = {4,5,6,12};
  int size = *(&n + 1) - n; // size = 4 //
  cout<< size <<"\n";

  int arr1[4] = {4,6,1,2}; // not more than 4 elements
  cout<<"\n";
  cout<<arr1[0];
  for(int i = 1;i<*(&arr1 + 1) - arr1;i++)
    cout<<" "<<arr1[i];
  cout<<"\n";  
  int arr2[5] = {1,5,6};
  //arr2[3]=arr2[4]=0
  cout<<"\n";
  cout<<arr2[0]; 
  for(int i = 1;i<*(&arr2 + 1) - arr2;i++)
    cout<<" "<<arr2[i];
  cout<<"\n";  
  arr2[3] = 10;
  arr2[4] = 12; 
  cout<<"\n";
  cout<<arr2[0]; 
  for(int i = 1;i<*(&arr2 + 1) - arr2;i++)
    cout<<" "<<arr2[i];
  cout<<"\n";  
  //Only Declare a new Array
  int newArr[10];
  /*
  newArr[0] = 12;
  newArr[1] = 18;
  
  ...............
  ...............

  */

//Dynamic Array
int* a = NULL;   // Pointer to int, initialize to nothing.
int length;           // Size needed for array
cin >> length;        // Read in the size
a = new int[length];
cout<<a[0];  
for (int i=1; i<length; i++) {
    cout<<" "<<a[i];    
}
cout<<"\n";
//  all values of a[] is 0 //
delete [] a;  // When done, free memory pointed to by a.
a = NULL;      
}
