#include <iostream>
#include <cstring>
using namespace std;
class Book
{
    public:
        string author;
        string bookName;
        Book()
        {
          cout<<"Please intitalize Author and Book-name"<<"\n";
        }
};
int main()
{
    Book book1;
    return 0;
}

/*
Inside console:
Please intitalize Author and Book-name
*/

-------------------------------------***-------------------------------------


#include <iostream>
#include <cstring>
using namespace std;
class Book
{
    public:
        string author;
        string bookName;
        Book(string aAuthor,string aBookName)
        {
          author = aAuthor;
          bookName = aBookName;
        }
};
int main()
{
    Book book1("Mario Pujo","The godfather");
    cout<<book1.bookName<<" is written by "<<book1.author<<endl;
    return 0;
}

/*
Inside console:
The godfather is written by Mario Pujo
*/
