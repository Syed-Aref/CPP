#include <iostream>

using std::cout;
class RowColum
{
    public:
        int r = 0;
        int c = 0;
};
int main()
{
    //Intializing a single object//
    RowColum rc1;
    cout<<rc1.r<<"\n";// Output: 0 //
    
    //Initializing through array
    RowColum rc[6];
    rc[1].c = 5;
    rc[2].r = 55;
    cout<<rc[1].c<<" "<<rc[5].r<<"\n";
    rc[5].r = -8;
    cout<<rc[1].c<<" "<<rc[5].r<<"\n";
    return 0;
}

