#include <iostream>
#include <cstring>
using namespace std;
class Book
{
    public:
        string author;
        string bookName;
        Book()
        {
          cout<<"Please intitalize Author and Book-name"<<"\n";
        }
};
int main()
{
    Book book1;
    return 0;
}

/*
Inside console:
Please intitalize Author and Book-name
*/

