HRank link : https://www.hackerrank.com/challenges/inherited-code/problem?h_r=next-challenge&h_v=legacy
#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
#include <cassert>
using namespace std;

class Student
{
    private :
        int marks[5];
    public :    
        void input()
        {
            cin >> marks[0] >> marks[1] >> marks[2] >> marks[3] >> marks[4];
        }
        int calculateTotalScore()
        {
            return marks[0]+marks[1]+marks[2]+marks[3]+marks[4] ;
        }
};

int main() {
    int n; // number of students
    cin >> n;
    Student s[n]; //  Student *s = new Student[n]; --> will also work same as this line
    
    for(int i = 0; i < n; i++){
        s[i].input();
    }

    // calculate kristen's score
    int kristen_score = s[0].calculateTotalScore();

    // determine how many students scored higher than kristen
    int count = 0; 
    for(int i = 1; i < n; i++){
        int total = s[i].calculateTotalScore();
        if(total > kristen_score){
            count++;
        }
    }

    // print result
    cout << count;
    
    return 0;
}

